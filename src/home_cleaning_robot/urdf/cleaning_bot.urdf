<?xml version="1.0"?>
<robot name="cleaning_bot">

    <!-- List of materials for easier viewing. -->
    <material name="red">
        <color rgba=".75 0.0 0.0 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 .75 1" />
    </material>

    <material name="green">
        <color rgba="0 .75 0 1" />
    </material>

    <material name="white">
        <color rgba=".75 .75 .75 1"/>    
    </material>

    <material name="purple">
        <color rgba=".75 0 1 1" />
    </material>

    <!-- World link as the root. -->
    <link name="world"/>

    <!-- This is the base link of the robot. A simple cylinderical chassis. -->
    <link name="base_link">
        <visual>
           <geometry>
                <cylinder radius="2.0" length="1.0"/> 
           </geometry>
           <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="2.0" length="1.0"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10.0"/>
            <inertia ixx="10.8333" ixy="0.0" ixz="0.0" iyy="10.8333" iyz="0.0" izz="20.0"/>
        </inertial>
    </link>

    <!-- This is the left wheel link. -->
    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="1.0" length=".5"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="1.0" length=".5"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.2708" ixy="0.0" ixz="0.0" iyy="0.2708" iyz="0.0" izz="0.5"/>
        </inertial>
    </link>

    <!-- This is the right wheel link. -->
    <link name="right_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="1.0" length=".5"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="1.0" length=".5"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.0"/>
            <inertia ixx="0.2708" ixy="0.0" ixz="0.0" iyy="0.2708" iyz="0.0" izz="0.5"/>
        </inertial>
    </link>

    <!-- The caster wheel. -->
    <link name="caster_wheel_link">
        <visual>
            <geometry>
                <sphere radius=".5"/>
            </geometry>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="1.0"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05"/>
        </inertial>
    </link>

    <!-- This is the lidar camera link mounted on top of the chassis. -->
    <link name="lidar_link">
        <visual>
            <geometry>
                <box size=".5 .5 .5"/>
            </geometry>
            <material name="purple"/>
        </visual>
        <collision>
            <geometry>
                <box size=".5 .5 .5"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <inertia ixx="0.004167" ixy="0.0" ixz="0.0" iyy="0.004167" iyz="0.0" izz="0.004167"/>
        </inertial>
    </link>

    <!-- This joint defines offset of base joint from world root. -->
    <joint name="world_base_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 1.5" rpy="0.0 0.0 1.57" />
    </joint>

    <!-- This joint defines base/left-wheel joint. -->
    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="0 2.25 -.5" rpy="1.57 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- This joint defines base/right-wheel joint. -->
    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="0 -2.25 -.5" rpy="1.57 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- This joint defines base/caster-wheel joint. -->
    <joint name="base_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel_link"/>
        <origin xyz="0 0 -1" rpy="0.0 0.0 0.0"/>
    </joint>

    <!-- This joint defines base/lidar joint. -->
    <joint name="base_lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="lidar_link"/>
        <origin xyz="1.75 0 .75" rpy="0.0 0.0 0.0"/>
    </joint>
</robot>